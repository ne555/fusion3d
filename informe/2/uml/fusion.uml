@startuml
	skinparam monochrome true
	skinparam shadowing false
	hide circle
	hide empty members

	class cloud{}
	class transformation{}

	class fusion{
		merge()
		discard()
		triangulate()
	}
	class mesh{}
	class polygon{}

	cloud -- transformation
	cloud o- fusion
	fusion - polygon
	mesh *-- polygon
	mesh *-- cloud

@enduml
