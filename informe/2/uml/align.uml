@startuml
	skinparam monochrome true
	skinparam shadowing false
	hide circle
	hide empty members

	class point{
		position
		normal
	}

	class cloud{
	}

	class align{
		compute_correspondences()
		filter_correspondences()
		compute_transformation()
	}

	class transformation{
	}

	class anchor{
		feature
		reference_frame

		compute_transformation()
		distance()
	}

	cloud *-- point
	cloud - transformation
	anchor - align
	align -- transformation
	anchor -- cloud

@enduml
